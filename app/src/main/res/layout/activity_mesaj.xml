<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.turkisiwhatsapp.MesajActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/web_hi_res_512"
        android:id="@+id/imageSend"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mesajınızı Giriniz"
        android:id="@+id/edtMessage"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/imageSend">

    </android.support.design.widget.TextInputEditText>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/imgFriend"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@id/imgFriend"
        android:id="@+id/friendMailChat"

        />
    <ListView
        android:layout_width="match_parent"
        android:layout_above="@id/imageSend"
        android:id="@+id/listMesaj"
        android:layout_below="@id/friendMailChat"
        android:layout_height="match_parent">

    </ListView>






</RelativeLayout>
